/*
 * -------------------------------------------------
 *  Nextflow config file for running on JAX's Sumner HPC
 * -------------------------------------------------
 * Base config needed for running with -profile sumner
 */

process {
  executor = 'slurm'
  beforeScript = 'module load singularity'
}
singularity {
  enabled = true
  cacheDir = "/projects/anczukow-lab/.singularity_cache/"
  autoMounts = true
}

// ensure that no user libraries get mounted into the container
process.containerOptions = "--no-home"